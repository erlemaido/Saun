@page
@using Sauna.Pages.Abstractions.Aids
@using Sauna.Pages.Abstractions.Constants
@using Sauna.Pages.Abstractions.Extensions
@model Sauna.Pages.Shop.OrderStatuses.OrderStatusesPage

@{
    Layout = "_Index";
    var page = Model.PageUrl;
}
@section Create {
    @Html.Link(string.Empty, new Link(Captions.Create, Model.CreationUrl))
}


<body>
<table class="table">
    <thead>
    @Html.Header(
        new Link(Html.DisplayNameFor(m => m.Item.OrderId), Model.GetSortString(m => m.OrderId, page)),
        new Link(Html.DisplayNameFor(m => m.Item.StatusId), Model.GetSortString(m=> m.StatusId, page)),
        new Link(Html.DisplayNameFor(m => m.Item.Time), Model.GetSortString(m => m.Time, page)),
        new Link(Html.DisplayNameFor(m => m.Item.Comment), Model.GetSortString(m=> m.Comment, page))
        )
    </thead>
   
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            @Html.Row(
                false,
                page,
                item.GetId(),
                Model.SortOrder,
                Model.SearchString,
                Model.PageIndex,
                Model.FixedFilter,
                Model.FixedValue,
                Html.Raw(Model.GetOrderName(item.OrderId)),
                Html.Raw(Model.GetStatusName(item.StatusId)),
                Html.DisplayFor(modelItem => item.Time),
                Html.DisplayFor(modelItem => item.Comment)
                )

        </tr>
    }
    </tbody>
</table>
</body>
