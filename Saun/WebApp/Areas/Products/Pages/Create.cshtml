@page
@using Pages.Abstractions.Extensions
@model Pages.Products.ProductsPage

@{
    Layout = "_Create";
}

<body>
    <input type="hidden" asp-for="Model.Item.Id" />
    @Html.Editor(model => model.Item.Name)
    @Html.EditControlsForDropDown(Model => Model.Item.BrandId, Model.Brands)
    @Html.EditControlsForDropDown(Model => Model.Item.ProductTypeId, Model.ProductTypes)
    @Html.EditControlsForDropDown(Model => Model.Item.UnitId, Model.Units)
    @Html.Editor(model => model.Item.PictureUrl)
    @Html.Editor(model => model.Item.Price)
</body>