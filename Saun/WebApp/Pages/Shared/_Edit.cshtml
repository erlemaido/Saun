@using Sauna.Pages.Abstractions.Aids
@using Sauna.Pages.Abstractions.Extensions
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.PageTitle;
}

<p>
    <h1>@ViewData["Title"]</h1>
</p>

<h4>Muuda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="editForm" 
              asp-page-handler="Edit"
              asp-route-sortorder="@Model.SortOrder"
              asp-route-fixedFilter="@Model.FixedFilter"
              asp-route-fixedValue="@Model.FixedValue"
              asp-route-pageIndex="@Model.PageIndex"
              enctype="multipart/form-data"
              method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @RenderBody()

            <input id="saveButton" type="submit" value="Salvesta" class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    
    @Html.BackTo(
        new Args(
            null, 
            null, 
            Model.FixedFilter, 
            Model.FixedValue, 
            Model.SortOrder, 
            Model.SearchString, 
            Model.PageIndex))

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}