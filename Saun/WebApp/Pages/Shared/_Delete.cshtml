@using Sauna.Pages.Abstractions.Aids
@using Sauna.Pages.Abstractions.Extensions
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.PageTitle;
    var itemId = Model.ItemId;
}

<p>
    <h1>@ViewData["Title"]</h1>
</p>


<h3>Oled kindel, et tahad kustutada?</h3>
<div>
    <hr />
    <dl class="row">
        @RenderBody()
    </dl>

    <form id="deleteForm" 
          asp-page-handler="Delete" 
          asp-route-sortorder="@Model.SortOrder"
          asp-route-fixedFilter="@Model.FixedFilter"
          asp-route-fixedValue="@Model.FixedValue"
          asp-route-pageIndex="@Model.PageIndex"
          asp-route-id ="@itemId"
          method="post">
        <input id="deleteButton" type="submit" value="Kustuta" class="btn btn-danger" /> |

    </form>

    <div>
        @Html.BackTo(
            new Args(
                null,
                null,
                Model.FixedFilter,
                Model.FixedValue,
                Model.SortOrder,
                Model.SearchString,
                Model.PageIndex
                ))
    </div>

</div>