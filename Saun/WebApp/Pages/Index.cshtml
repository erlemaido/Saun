@page
@using Microsoft.AspNetCore.Html
@using Sauna.Pages.Abstractions.Aids
@using Sauna.Pages.Abstractions.Constants
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h2 class="my-4">Saunakaubad24</h2>
            <div class="list-group">
                <a href="/" class="list-group-item">TOP tooted</a>
                <a href="/" class="list-group-item">Viimati ostetud</a>
                <a href="/" class="list-group-item">Allahinnatud %</a>
            </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="images/saun1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="images/saun2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="images/saun3.jpeg" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="images/saun4.jpeg" alt="Fourth slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="images/saun5.jpg" alt="Fifth slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">
                @foreach (var item in Model.Products)
                {
                    var data = item.Data;
                    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">@data.Price €</div>
                        <a href="#">
                            <img class="card-img-top" src="/uploads/@data.PictureUrl" alt="" style="width:320px;height:270px;">
                        </a>
                        <div class="card-body">
                            <h4 class="card-title">@data.Name</h4>
                        </div>
                          <div class="card-body">
                              @(new HtmlString(Sauna.Pages.Abstractions.Aids.Href.Compose(new Args(new Uri("https://localhost:5001/Shop/Products"), data.Id), Actions.Details, Captions.Details)))
                          </div>
                    </div>
                }

            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->